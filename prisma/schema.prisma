// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int         @id @default(autoincrement())
  nombre      String
  apellido    String? // Indicamos que la columna puede tener valores nulos
  email       String      @unique // Con el @ agregamos configuraciones adicionales de la columna
  password    String      @db.Text // Le indico el tipo de dato exacto que yo quiero utilizar sino utilizar el tipo de dato por defecto (https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#model-fields)
  tipoUsuario TipoUsuario @map("tipo_usuario")

  direcciones Direccion[] // Usuario va a tener varias Direcciones (por eso es un arreglo)

  // @@ sirve para modificar configuraciones DE LA TABLA
  @@map("usuarios")
}

model Direccion {
  id           Int     @id @default(autoincrement())
  calle        String
  numero       Int
  referencia   String?
  departamento String?
  usuarioId    Int     @map("usuario_id")

  // Una direccion va a tener un usuario a la cual le pertenece
  usuario Usuario @relation(fields: [usuarioId], references: [id])

  @@map("direcciones")
}

model Producto {
  id         Int     @id @default(autoincrement())
  nombre     String
  precio     Float
  imagen     String?
  disponible Boolean @default(true)

  @@map("productos")
}

enum TipoUsuario {
  ADMIN
  CLIENTE
}